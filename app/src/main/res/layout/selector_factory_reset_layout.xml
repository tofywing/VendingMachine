<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">
    <TextView
        android:id="@+id/factory_reset_title"
        style="@style/VendingTheme.VendingMachineText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="@color/pureBlack"
        android:text="@string/factory_reset_title"/>

    <TextView
        android:id="@+id/factory_reset_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/factory_reset_title"
        android:layout_marginTop="20dp"
        android:text="@string/factory_reset_subtitle"
        android:textColor="@color/transparentBlack"
        android:textSize="16sp"
        android:textStyle="italic"
        android:typeface="serif"/>

</RelativeLayout>
