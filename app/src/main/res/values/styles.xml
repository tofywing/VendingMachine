<resources>

    <!-- Base application theme. -->
    <style name="VendingTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="VendingTheme.ActionBarStyle">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">#FFFFFF</item>
    </style>

    <style name="VendingTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/pureWhite</item>
        <item name="colorControlNormal">@color/pureBlack</item>
    </style>

    <style name="VendingTheme.VendingMachineText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="VendingTheme.ActionBar.TitleTextStyle"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/pureWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="VendingTheme.ActionBar.SubTitleTextStyle"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/lightAzureBlue</item>
        <item name="android:textStyle">italic</item>
        <item name="android:typeface">serif</item>
    </style>
</resources>
